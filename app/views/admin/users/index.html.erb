<div class="container">
  <h2>ユーザー一覧</h2>
  <table class="table table-border table-hover">
    <thead>
      <tr class="bg-light">
        <th>会員ID</th>
        <th>氏名</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td>
          <%= link_to user.name, admin_user_path(user) %>
        </td>
          <% if user.is_deleted == false %>
            <td class="text-success">有効</td>
          <% else %>
            <td class="text-danger">退会</td>
          <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
</div>