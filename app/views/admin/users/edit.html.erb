<div class="container">
  <h2 class="mt-3"><%= @user.name %>のユーザー情報編集</h2>
  <%= render "layouts/errors", error: @user %>
  <%= form_with model: [:admin, @user] do |f| %>
    <div class="field row">
      <div class="col-4"><%= f.label :user_id, "ユーザーID" %></div>
      <div class="col-6"><%= @user.id %></div>
    </div>
    <div class="field row">
      <div class="col-4"><%= f.label :profile_image, "プロフィール画像 (png、jpg、jpeg形式のファイルを選択してください)" %></div>
      <div class="col-6"><%= f.file_field :profile_image, accept: "image/*", class: "mr-2 mb-2" %></div>
    </div>
    <div class="field row">
      <div class="col-4"><%= f.label :name, "ユーザーネーム" %></div>
      <div class="col-6"><%= f.text_field :name, class: "form-control mr-2 mb-2" %></div>
    </div>
    <div class="field row">
      <div class="col-4"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-6"><%= f.email_field :email, autocomplete: "email", class: "form-control mb-2" %></div>
    </div>
    <div class="field row">
      <div class="col-4"><%= f.label :self_introduction, "自己紹介" %></div>
      <div class="col-6"><%= f.text_area :self_introduction, class: "form-control mb-2", rows: 5 %></div>
    </div>
    <div class="field row">
      <div class="col-4"><%= f.label :is_deleted, "ユーザーステータス" %></div>
      <div class="col-6">
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "有効", value: false %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "退会", value: true %>
       </div>
    </div>
    <div class="field row">
      <div class="col-6 mt-3"><%= f.submit "変更を保存", class: "btn btn-success offset-md-10" %></div>
    </div>
  <% end %>
</div>