<div class="container">
  <h2 class="mt-3">シェアハウス掲示板</h2>
  <% if @boards.blank? %>
    <p class="text-warning">掲示板はありません</p>
  <% else %>
    <div class="board">
      <% @boards.each do |board| %>
        <div class="board-box mb-2">
          <%= link_to board.title, admin_board_path(board) %>
        </div>
      <% end %>
      <%= paginate @boards %>
    </div>
  <% end %>