<div class="container">
  <h2>ユーザー一覧</h2>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-3">
        <%= image_tag user.get_profile_image(100,100) %>
      </div>
      <div class="col-3">
        <%= link_to user.name, user_path(user.id) %>
      </div>
      <div class="col-2"><%= user.area %></div>
      <div class="col-2">
        <% if current_user.following?(user) %>
          <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>