<div class="container">
  <h2>ユーザー一覧</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>プロフィール</th>
        <th>ユーザーネーム</th>
        <th>エリア</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <div class="row">
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            </div><td><%= link_to user.name, user_path(user.id) %></td>
            <td><%= user.area %></td>
            <td>
              <% unless current_user == user %>
                <% if current_user.following?(user) %>
                  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn" %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </div>
    </tbody>
  </table>
</div>