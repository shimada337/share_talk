<div class="container">
  <div class="py-3">
    <%= search_form_for @search_user, class: "form-inline" do |f| %>
      <%= f.text_field :name_cont, class: "form-control mx-1 col-4", placeholder: "ユーザーを検索" %>
      <%= f.submit "検索", class: "btn btn-outline-success" %>
    <% end %>
  </div>
  <h2>ユーザー一覧</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>プロフィール</th>
        <th>ユーザーネーム</th>
        <th>都道府県</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <div class="row">
        <% @search_users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100), class: "user_profile" %></td>
            <td><%= link_to user.name, user_path(user.id) %></td>
            <td><%= user.area %></td>
            <td>
              <% unless current_user == user %>
                <% if current_user.following?(user) %>
                  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-warning" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-primary" %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </div>
    </tbody>
  </table>
  <%= paginate @search_users %>
</div>