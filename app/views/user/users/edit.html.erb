<div class="container">
  <h2>ユーザー編集</h2>
  <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user_name">ユーザーネーム</label>
        <%= f.text_field :name, placeholder:"名前", class:"form-control name" %>
      </div>
      <div class="form-group">
        <label for="user_image">プロフィール画像</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:"form-control-file user-image" %>
      </div>
      <div class="form-group">
        <label for="self_introduction">自己紹介</label>
        <%= f.text_area :self_introduction, class:"form-control self_introduction" %>
      </div>
      <div class="form-group">
        <label for="area">住んでいる都道府県</label>
        <%= f.select :area, User.areas.keys, {}, class:"form-control area" %>
      </div>
      <div class="form-group">
        <label for="position">職業</label>
        <%= f.select :position, User.positions.keys, {}, class:"form-control position" %>
      </div>
      <div class="form-group">
        <%= f.submit '更新', class:"btn btn-secondary" %>
      </div>
      <% end %>
      
      <h2>ハウスメンバー一覧</h2>
      <% @house_members.each do |house_member| %>
        <%= house_member.name %>
        <%= house_member.introduction %>
        <%= house_member.position %>
        <%= link_to "削除", user_house_member_path(house_member.id), method: :delete, "data-confirm" => "シェアハウスメンバーを本当に削除しますか？" %>
      <% end %>
      
      <h2>ハウスメンバー新規登録</h2>
      <%= form_with model: @house_member, url: '/users/@user.id/house_members', method: :post do |f| %>
        <%= f.label :name, "シェアハウスメンバーネーム" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :introduction, "紹介" %>
        <%= f.text_area :introduction, class: "form-control" %>
        <%= f.label :position, "職業" %>
        <%= f.select :position, HouseMember.positions.keys, {}, class: "form-control" %>
        <%= f.submit '新規登録' %>
      <% end %>
</div>