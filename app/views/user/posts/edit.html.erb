<div class="container">
  <h2 class="mt-3 rounded-pill bg-info border border-secondary d-inline-block p-1">投稿編集</h2><br>
  <p class="linear-gradient">投稿画像</p><br>
  <%= image_tag @post.get_image(300,300), class: "rounded" %>
  <%= form_with model: @post do |f| %>
    <div class="row my-3">
      <%= f.label :body, "本文", class: "linear-gradient" %>
      <%= f.text_area :body, class: "form-control", rows: 10, placeholder: '投稿内容を入力してください' %>
    </div>
    <div class="row">
      <%= f.submit '更新', class: "btn btn-success" %>
    </div>
  <% end %>
</div>