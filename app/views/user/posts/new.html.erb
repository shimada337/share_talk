<div class="container">
  <h2>新規投稿</h2>
  <%= form_with model: @post, url: '/posts', method: :post do |f| %>
  <div class="row">
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="row">
    <%= f.text_area :body, class: "form-control my-3" %>
  </div>
  <div class="row">
    <button class="btns slide-bg">
      <span></span><%= f.submit '投稿', class: "btn text-reset" %>
    </button>
  </div>
<% end %>
</div>