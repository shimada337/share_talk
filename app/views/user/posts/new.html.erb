<div class="container">
  <h2>新規投稿</h2>
  <%= render "layouts/errors", error: @post %>
  <%= form_with model: @post, url: '/posts', method: :post do |f| %>
    <div class="row">
      <%= f.label :image, "投稿画像 (png、jpg、jpeg形式のファイルを選択してください)" %>
    </div>
    <div class="row">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="row my-3">
      <%= f.label :body, "本文" %>
      <%= f.text_area :body, class: "form-control", rows: 10, placeholder: '投稿内容を入力してください' %>
    </div>
    <div class="row">
      <%= f.submit '投稿', class: "btn btn-success" %>
    </div>
  <% end %>
</div>