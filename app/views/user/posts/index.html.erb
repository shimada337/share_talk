<div class="container">
  <h2>投稿一覧</h2>
  <%= link_to '新規投稿する', new_post_path %>
  <% @posts.each do |post| %>
    <div class="row">
      <%= image_tag post.user.get_profile_image(50,50), class: "mr-2" %>
      <%= link_to post.user.name, user_path(post.user_id) %>
    </div>
    <%= link_to post_path(post) do %>
      <div class="row posts">
        <%= image_tag post.get_image(500,500), class: "mx-auto" %>
      </div>
    <% end %>
    <div class="row">
      <%= post.body %>
    </div>
    <div class="row">
      <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
      <div class="favorite_buttons_<%= post.id %>">
        <%= render "user/favorites/favorite", post: post %>
      </div>
      コメント<%= post.post_comments.count %> <i class="fa-solid fa-comment"></i>
    </div>
  <% end %>
</div>