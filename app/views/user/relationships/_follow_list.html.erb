<div class="container">
  <% if users.exists? %>
    <% users.each do |user| %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ユーザーネーム</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%=link_to user.name, user_path(user) %></td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</div>