<div class="container">
  <% if users.exists? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ユーザーネーム</th>
          <th>フォロー数</th>
          <th>フォロワー数</th>
        </tr>
      </thead>
      <tbody>
        <div class="row">
        <% users.each do |user| %>
          <tr>
            <td><%=link_to user.name, user_path(user) %></td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</div>