<div class="container">
  <h2 class="mt-3 d-inline-block p-1 session-heading">ユーザー新規登録</h2>
  
  <div class="registration-form p-3 my-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>
      
      <div class="field row mb-3">
        <div class="col-3"><%= f.label :name, "ユーザーネーム" %></div>
        <div class="col-6">
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      </div>
      
      <div class="field row mb-3">
        <div class="col-3"><%= f.label :area, "シェアハウスしている都道府県" %></div>
        <div class="col-6"><%= f.select :area, User.areas.keys, {}, class: "form-control" %></div>
      </div>
      
      <div class="field row mb-3">
        <div class="col-3"><%= f.label :position, "職業" %></div>
        <div class="col-6"><%= f.select :position, User.positions.keys, {}, class: "form-control" %></div>
      </div>
    
      <div class="field row mb-3">
        <div class="col-3"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-6"><%= f.email_field :email, autocomplete: "email", class: "form-control" %></div>
      </div>
    
      <div class="field row mb-3">
        <div class="col-3"><%= f.label :password, "パスワード(6文字以上)" %></div>
        <div class="col-6"><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></div>
      </div>
    
      <div class="field row mb-3">
        <div class="col-3"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
        <div class="col-6"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></div>
      </div>
    
      <div class="actions">
        <button class="btns cover-3d offset-md-4 my-3">
          <span><%= f.submit "新規登録", class: "btn text-reset" %></span>
        </button>
      </div>
    <% end %>
  </div>
  
  <%= render "user/shared/links" %>
</div>
